<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:conv="clr-namespace:GroceryOrderingApp.Mobile.Converters">

    <!-- Value Converters -->
    <conv:StringToBoolConverter x:Key="StringToBool"/>
    <conv:CountToBoolConverter x:Key="CountToBool"/>
    <conv:IsPendingConverter x:Key="IsPending"/>
    <conv:InverseBoolConverter x:Key="InverseBool"/>

    <!-- Colors -->
    <Color x:Key="PrimaryColor">#512BD4</Color>
    <Color x:Key="SecondaryColor">#DFD8F7</Color>
    <Color x:Key="SuccessColor">#00B050</Color>
    <Color x:Key="ErrorColor">#E81828</Color>
    <Color x:Key="WarningColor">#FFB900</Color>
    <Color x:Key="TextColor">#1F1F1F</Color>
    <Color x:Key="PlaceholderColor">#999999</Color>

    <!-- Font Sizes -->
    <x:Double x:Key="LargeFontSize">20</x:Double>
    <x:Double x:Key="MediumFontSize">16</x:Double>
    <x:Double x:Key="SmallFontSize">14</x:Double>
    <x:Double x:Key="TinyFontSize">12</x:Double>

</ResourceDictionary>
