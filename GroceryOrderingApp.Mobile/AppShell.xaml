<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GroceryOrderingApp.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GroceryOrderingApp.Mobile.Views">

    <!-- Authentication Routes -->
    <ShellContent Title="Login" ContentTemplate="{DataTemplate local:LoginPage}" Route="login"/>

    <!-- Customer Routes -->
    <TabBar x:Name="CustomerTabs" Route="customer" IsVisible="False">
        <ShellContent Title="Categories" Icon="home" ContentTemplate="{DataTemplate local:CustomerCategoryPage}" Route="categories"/>
        <ShellContent Title="Cart" Icon="cart" ContentTemplate="{DataTemplate local:CartPage}" Route="cart"/>
        <ShellContent Title="Orders" Icon="history" ContentTemplate="{DataTemplate local:CustomerOrderHistoryPage}" Route="orderhistory"/>
    </TabBar>

    <!-- Admin Routes -->
    <TabBar x:Name="AdminTabs" Route="admin" IsVisible="False">
        <ShellContent Title="Dashboard" Icon="home" ContentTemplate="{DataTemplate local:AdminDashboardPage}" Route="dashboard"/>
        <ShellContent Title="Orders" Icon="cart" ContentTemplate="{DataTemplate local:AdminOrdersPage}" Route="orders"/>
    </TabBar>

</Shell>
