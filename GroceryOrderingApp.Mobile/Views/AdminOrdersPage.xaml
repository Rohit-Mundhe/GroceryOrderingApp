<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GroceryOrderingApp.Mobile.Views.AdminOrdersPage"
             Title="Orders">
    <VerticalStackLayout Padding="10">
        <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}"/>
        
        <CollectionView ItemsSource="{Binding Orders}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15" Margin="5" HasShadow="True" CornerRadius="8">
                        <StackLayout>
                            <Label Text="{Binding Id, StringFormat='Order #{0}'}" FontSize="16" FontAttributes="Bold"/>
                            <Label Text="{Binding UserId, StringFormat='User ID: {0}'}" FontSize="12" TextColor="Gray"/>
                            <Label Text="{Binding OrderDate, StringFormat='Date: {0:g}'}" FontSize="12" TextColor="Gray"/>
                            <Label Text="{Binding Status, StringFormat='Status: {0}'}" FontSize="12" FontAttributes="Bold"/>
                            <Label Text="{Binding TotalAmount, StringFormat='Total: â‚¹{0:F2}'}" FontSize="12" TextColor="Green"/>
                            <Button Text="View Details" CommandParameter="{Binding Id}" Padding="10"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
