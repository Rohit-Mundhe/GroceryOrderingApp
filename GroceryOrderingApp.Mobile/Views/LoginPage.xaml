<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GroceryOrderingApp.Mobile.Views.LoginPage"
             Title="Login"
             BackgroundColor="White">
    <VerticalStackLayout Padding="20" Spacing="10" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Label Text="Grocery Ordering App" FontSize="28" FontAttributes="Bold" HorizontalTextAlignment="Center" Margin="0,30,0,20"/>
        
        <Label Text="UserId:" FontSize="14" FontAttributes="Bold"/>
        <Entry x:Name="UserIdEntry" Placeholder="Enter your UserId" Text="{Binding UserId}"/>
        
        <Label Text="Password:" FontSize="14" FontAttributes="Bold"/>
        <Entry x:Name="PasswordEntry" Placeholder="Enter your password" IsPassword="True" Text="{Binding Password}"/>
        
        <Label Text="{Binding ErrorMessage}" TextColor="Red" FontSize="12" IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBool}}"/>
        
        <Button Text="Login" Command="{Binding LoginCommand}" Margin="0,20,0,0" Padding="10"/>
        
        <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}"/>
        
        <Label Text="Demo Credentials:" FontSize="12" FontAttributes="Bold" Margin="0,20,0,0"/>
        <Label Text="Admin: admin / Admin@123" FontSize="11"/>
    </VerticalStackLayout>
</ContentPage>
