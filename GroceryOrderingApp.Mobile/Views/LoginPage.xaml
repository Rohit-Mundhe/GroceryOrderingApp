<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GroceryOrderingApp.Mobile.Views.LoginPage"
             Title="Login"
             BackgroundColor="{StaticResource BackgroundColor}">
    
    <Grid RowDefinitions="Auto,*,Auto" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        
        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Padding="0" BackgroundColor="{StaticResource Primary}" VerticalOptions="Start">
            <Label Text="ðŸ›’" FontSize="48" HorizontalTextAlignment="Center" Margin="0,30,0,0"/>
            <Label Text="Grocery Ordering" Style="{StaticResource HeadlineStyle}" 
                   HorizontalTextAlignment="Center" TextColor="White" Margin="0,10,0,0"/>
            <Label Text="Welcome Back" FontSize="14" TextColor="{StaticResource TextSecondary}" 
                   HorizontalTextAlignment="Center" Margin="0,5,0,30"/>
        </VerticalStackLayout>
        
        <!-- Main Content -->
        <ScrollView Grid.Row="1" Padding="20" VerticalOptions="CenterAndExpand">
            <VerticalStackLayout Spacing="16">
                
                <!-- UserId Field -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="UserId" FontAttributes="Bold" FontSize="14" TextColor="{StaticResource TextPrimary}"/>
                    <Frame Style="{StaticResource CardStyle}" Padding="0" HasShadow="False" BorderColor="{StaticResource Primary}">
                        <Entry x:Name="UserIdEntry" 
                               Placeholder="Enter admin / customer UserId" 
                               Text="{Binding UserId}"
                               FontSize="14"
                               PlaceholderColor="{StaticResource TextHint}"
                               TextColor="{StaticResource TextPrimary}"
                               Padding="12"/>
                    </Frame>
                </VerticalStackLayout>
                
                <!-- Password Field with Show/Hide -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Password" FontAttributes="Bold" FontSize="14" TextColor="{StaticResource TextPrimary}"/>
                    <Frame x:Name="PasswordFrame" Style="{StaticResource CardStyle}" Padding="12" 
                           HasShadow="False" BorderColor="{StaticResource Primary}">
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                            <Entry x:Name="PasswordEntry" 
                                   Grid.Column="0"
                                   Placeholder="Enter your password" 
                                   IsPassword="{Binding IsPasswordHidden, Source={x:Reference PasswordToggle}}"
                                   Text="{Binding Password}"
                                   FontSize="14"
                                   PlaceholderColor="{StaticResource TextHint}"
                                   TextColor="{StaticResource TextPrimary}"
                                   VerticalOptions="Center"/>
                            <Button x:Name="PasswordToggle"
                                    Grid.Column="1"
                                    Text="ðŸ‘"
                                    FontSize="20"
                                    Background="Transparent"
                                    Padding="0"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    VerticalOptions="Center"
                                    HorizontalOptions="End"/>
                        </Grid>
                    </Frame>
                </VerticalStackLayout>
                
                <!-- Error Message -->
                <Label Text="{Binding ErrorMessage}" 
                       TextColor="{StaticResource Error}" 
                       FontSize="12" 
                       LineBreakMode="WordWrap"
                       IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBool}}"/>
                
                <!-- Loading Indicator -->
                <ActivityIndicator IsRunning="{Binding IsLoading}" 
                                   IsVisible="{Binding IsLoading}"
                                   Color="{StaticResource Primary}"
                                   Scale="1.5"/>
                
                <!-- Login Button -->
                <Button Text="Sign In" 
                        Command="{Binding LoginCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,10,0,0"
                        FontSize="16"
                        Padding="12"/>
                
                <!-- Demo Info Card -->
                <Frame BorderColor="{StaticResource Secondary}" HasShadow="False" Padding="12" CornerRadius="8" Margin="0,20,0,0">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="ðŸ“± Demo Credentials" FontAttributes="Bold" FontSize="13" TextColor="{StaticResource Secondary}"/>
                        <Label Text="UserId: admin" FontSize="12" TextColor="{StaticResource TextPrimary}"/>
                        <Label Text="Password: Admin@123" FontSize="12" TextColor="{StaticResource TextPrimary}"/>
                        <Label Text="or log in with any customer account" FontSize="11" TextColor="{StaticResource TextSecondary}" Margin="0,4,0,0"/>
                    </VerticalStackLayout>
                </Frame>
                
            </VerticalStackLayout>
        </ScrollView>
        
        <!-- Footer -->
        <Label Grid.Row="2" 
               Text="Secure Login â€¢ Free Tier" 
               FontSize="11" 
               TextColor="{StaticResource TextHint}"
               HorizontalTextAlignment="Center" 
               Margin="0,0,0,12"/>
    </Grid>
    
</ContentPage>
