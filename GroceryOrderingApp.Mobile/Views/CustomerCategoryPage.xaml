<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GroceryOrderingApp.Mobile.Views.CustomerCategoryPage"
             Title="Categories">
    <VerticalStackLayout Padding="10">
        <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}"/>
        
        <CollectionView ItemsSource="{Binding Categories}" SelectionMode="Single">
            <CollectionView.SelectionChangedCommand>
                <Command/>
            </CollectionView.SelectionChangedCommand>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15" Margin="5" HasShadow="True" CornerRadius="8">
                        <StackLayout>
                            <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold"/>
                            <Button Text="View Products" Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.LoadProductsCommand}" CommandParameter="{Binding Id}" Padding="10"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
