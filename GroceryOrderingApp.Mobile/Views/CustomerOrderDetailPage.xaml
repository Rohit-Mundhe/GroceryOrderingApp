<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GroceryOrderingApp.Mobile.Views.CustomerOrderDetailPage"
             Title="Order Details">
    <VerticalStackLayout Padding="15" Spacing="10">
        <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}"/>
        
        <Group x:DataType="models:OrderDto" xmlns:models="clr-namespace:GroceryOrderingApp.Mobile.Models">
            <Label Text="{Binding Order.Id, StringFormat='Order #{0}'}" FontSize="18" FontAttributes="Bold"/>
            <Label Text="{Binding Order.OrderDate, StringFormat='Date: {0:g}'}" FontSize="12" TextColor="Gray"/>
            <Label Text="{Binding Order.Status, StringFormat='Status: {0}'}" FontSize="14" FontAttributes="Bold"/>
            <Label Text="{Binding Order.TotalAmount, StringFormat='Total Amount: ₹{0:F2}'}" FontSize="14" TextColor="Green" FontAttributes="Bold"/>
        </Group>
        
        <Label Text="Order Items:" FontSize="14" FontAttributes="Bold" Margin="0,10,0,0"/>
        <CollectionView ItemsSource="{Binding Order.Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" HasShadow="True">
                        <StackLayout>
                            <Label Text="{Binding ProductName}" FontSize="12" FontAttributes="Bold"/>
                            <Label Text="{Binding Quantity, StringFormat='Qty: {0}'}" FontSize="11"/>
                            <Label Text="{Binding PriceAtTime, StringFormat='₹{0:F2}'}" FontSize="11"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
